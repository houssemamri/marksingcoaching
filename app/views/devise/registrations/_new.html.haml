= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  - unless resource.email.present?
    .field.form-group
      = f.label :email
      %br/
      = f.email_field :email, class: "form-control"
      -# = f.email_field :email, autofocus: true, class: "form-control"
  - else 
    %label email
    = f.hidden_field :email, value: resource.email
    %h4.pb-3
      = resource.email
  .field.form-group
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "off", class: "form-control"
  %small 
    By signing up and using our services, you agree to our 
    %a{ href: '/terms' } Terms of Use
    and 
    %a{ href: '/privacy' } Privacy Policy.
  -# .field.form-group
  -#   = f.label :password_confirmation
  -#   %br/
  -#   = f.password_field :password_confirmation, autocomplete: "off", class: "form-control"
  .actions.text-center
    = f.submit "Sign up", class: "btn btn-primary py-3 my-3", style: "width: 190px;"
