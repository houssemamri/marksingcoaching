= form_for @podcast do |f|
  - if @podcast.errors.any?
    #error_explanation
      %h2= "#{pluralize(@podcast.errors.count, "error")} prohibited this podcast from being saved:"
      %ul
        - @podcast.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :published_on
    = f.datetime_select :published_on
  .field
    = f.label :libsyn_id
    = f.text_field :libsyn_id
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
